  <div class="card-header">
    <h3>Cancel my account</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <p class="card-text"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"%></p>
  </div>
</div>


